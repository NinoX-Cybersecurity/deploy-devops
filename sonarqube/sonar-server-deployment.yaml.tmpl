apiVersion: apps/v1 # for versions before 1.9.0 use apps/v1beta2
kind: Deployment
metadata:
  name: sonarqube-server
spec:
  replicas: 1
  selector:
    matchLabels:
      app: sonarqube-server
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: sonarqube-server
    spec:
      containers:
      - name: sonarqube-server
        image: sonarqube:7.9-community
        ports:
        - containerPort: 9000
        volumeMounts:
        - name: sonar-data
          mountPath: /opt/sonarqube/data
      volumes:
      - name: sonar-data
        nfs:
          server: {{nfs_ip}}
          path: /{{nfs_dir}}/sonarqube
